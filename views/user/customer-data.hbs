<div class="container">
     <div class="home-content">

     <span class="text">New Client</span>

     </div>
    <div class="row">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-5">
            <div class="col">
                <form id="customerForm" class="form-horizontal" action="/zayan-customer-form" method="POST">
                    <fieldset>
                        <div class="section postdetails p-5">
                            <h4>Create a client</h4>
                            <div class="row form-group add-title my-5">
                                <label class="col-sm-3 label-title mb-3">Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                                </div>
                            </div>

                            <div class="row form-group mb-5">
                                <label class="col-sm-3 label-title mb-3">Address<span class="required"></span></label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="textarea" name="address" placeholder="Address"
                                        rows="4" required></textarea>
                                </div>
                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2">Date of Birth </label>
                                <div class="col-sm-9">
                                    <input name="date" type="datetime-local" onchange="checkTime()"
                                        class="flatpickr flatpickr-input form-control active" id='checkin-date'
                                        onkeydown="return false" style="background-color:white">
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Contact email </label>
                                <div class="col-sm-9">
                                    <input class="form-control" id="email" name="email" type="email" onchange="">
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Phone Number </label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" id="mobile" name="mobile" maxlength="10">
                                </div>

                            </div>
                            <div class="row" style="float: right;">
                                <div class="col-lg-4">
                                    <button type="submit" class="btn btn-success"
                                        onclick="document.getElementById('id01').style.display='block'"
                                        style="width: 180px;height: 50px;">Submit Data</button>

                                </div>
                            </div>


                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>